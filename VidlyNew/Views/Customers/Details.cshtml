@model VidlyNew.Models.Customer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                <h3> Customer Details</h3>
            </th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null)
    {
        <tr>
            <td>
                <h3>@Model.Name</h3>
            </td>
        </tr>
            <tr>
                <td>
                    <ul>
                        <li>Membership Type : @Model.MembershipType.MembershipName</li>
                        @if (Model.Birthdate != null)
                        {
                            <li>Birthdate : @Model.Birthdate.Value.ToShortDateString()</li>
                        }
                    </ul>
                </td>
            </tr>
    }
    else
    {
        <tr>
            <td>
                <h3>No matching data available</h3>
                
            </td>
        </tr>
    }

    </tbody>

</table>